{
  "name": "AI Scientist v2 Development",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "ai-scientist",
  "workspaceFolder": "/app",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/nvidia-cuda:1": {
      "installToolkit": true
    }
  },

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.linting.mypyEnabled": true,
        "python.formatting.provider": "black",
        "python.formatting.blackArgs": ["--line-length=88"],
        "python.sortImports.args": ["--profile", "black"],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/experiments": true,
          "**/aisci_outputs": true,
          "**/results": true,
          "**/cache": true
        },
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": [
          "tests"
        ],
        "python.testing.unittestEnabled": false,
        "files.watcherExclude": {
          "**/experiments/**": true,
          "**/aisci_outputs/**": true,
          "**/results/**": true,
          "**/cache/**": true
        },
        "git.ignoreLimitWarning": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.mypy-type-checker",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-toolsai.jupyter",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "ms-vsliveshare.vsliveshare",
        "streetsidesoftware.code-spell-checker",
        "James-Yu.latex-workshop",
        "ms-vscode.cmake-tools",
        "bierner.markdown-mermaid",
        "DavidAnson.vscode-markdownlint",
        "esbenp.prettier-vscode"
      ]
    }
  },

  "forwardPorts": [8000, 8888, 3000, 9090],
  "portsAttributes": {
    "8000": {
      "label": "AI Scientist API",
      "onAutoForward": "notify"
    },
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "silent"
    },
    "3000": {
      "label": "Grafana Dashboard",
      "onAutoForward": "notify"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "pip install -e . && pre-commit install",
  
  "remoteUser": "aiscientist",
  
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${localEnv:HOME}/.gitconfig,target=/home/aiscientist/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/aiscientist/.ssh,type=bind,consistency=cached"
  ],

  "containerEnv": {
    "PYTHONPATH": "/app",
    "DEVELOPMENT": "true"
  },

  "initializeCommand": "echo 'Initializing AI Scientist v2 development environment...'",
  
  "onCreateCommand": {
    "install-deps": "pip install -r requirements.txt",
    "setup-git": "git config --global --add safe.directory /app"
  },

  "updateContentCommand": "pip install -r requirements.txt",
  
  "waitFor": "postCreateCommand",
  
  "shutdownAction": "stopCompose"
}