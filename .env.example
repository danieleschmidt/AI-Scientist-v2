# AI Scientist v2 Environment Configuration

# ===================================
# LLM API Keys (Required)
# ===================================

# OpenAI API Key for GPT models
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key for Claude models
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Gemini API Key for Google models
GEMINI_API_KEY=your-gemini-api-key-here

# Semantic Scholar API Key (Optional - for higher rate limits)
S2_API_KEY=your-semantic-scholar-api-key-here

# ===================================
# AWS Configuration (for Bedrock)
# ===================================

# AWS Access Key ID
AWS_ACCESS_KEY_ID=your-aws-access-key-id

# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# AWS Region Name
AWS_REGION_NAME=us-east-1

# ===================================
# Database Configuration
# ===================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://ai_scientist:changeme@localhost:5432/ai_scientist

# PostgreSQL Password
POSTGRES_PASSWORD=changeme

# Redis URL for caching
REDIS_URL=redis://localhost:6379/0

# ===================================
# Application Configuration
# ===================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application secret key
SECRET_KEY=your-secret-key-here

# ===================================
# GPU Configuration
# ===================================

# CUDA devices to use (comma-separated or 'all')
CUDA_VISIBLE_DEVICES=0

# Enable CUDA optimizations
CUDA_ENABLED=true

# PyTorch CUDA memory fraction
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# ===================================
# Experiment Configuration
# ===================================

# Maximum concurrent experiments
MAX_CONCURRENT_EXPERIMENTS=3

# Default experiment timeout (seconds)
EXPERIMENT_TIMEOUT=3600

# Results storage path
RESULTS_PATH=./experiments

# Data storage path
DATA_PATH=./data

# Cache storage path
CACHE_PATH=./cache

# ===================================
# Security Configuration
# ===================================

# Enable sandbox mode for code execution
SANDBOX_ENABLED=true

# Maximum execution time for code (seconds)
MAX_EXECUTION_TIME=300

# Maximum memory usage (MB)
MAX_MEMORY_USAGE=4096

# Network access for experiments (true/false)
NETWORK_ACCESS_ENABLED=false

# ===================================
# Monitoring Configuration
# ===================================

# Enable Prometheus metrics
PROMETHEUS_ENABLED=true

# Prometheus port
PROMETHEUS_PORT=9090

# Grafana password
GRAFANA_PASSWORD=admin

# Enable performance profiling
PROFILING_ENABLED=false

# ===================================
# Development Tools
# ===================================

# Jupyter token for authentication
JUPYTER_TOKEN=ai-scientist

# Enable Jupyter Lab
JUPYTER_ENABLE_LAB=yes

# Pre-commit hooks enabled
PRE_COMMIT_ENABLED=true

# ===================================
# Rate Limiting
# ===================================

# API rate limit (requests per minute)
API_RATE_LIMIT=60

# LLM API rate limit (requests per minute)
LLM_RATE_LIMIT=30

# Maximum tokens per minute
MAX_TOKENS_PER_MINUTE=100000

# ===================================
# Cost Management
# ===================================

# Maximum daily cost limit (USD)
MAX_DAILY_COST=100

# Cost tracking enabled
COST_TRACKING_ENABLED=true

# Budget alerts enabled
BUDGET_ALERTS_ENABLED=true

# ===================================
# Backup and Recovery
# ===================================

# Automatic backup enabled
AUTO_BACKUP_ENABLED=true

# Backup interval (hours)
BACKUP_INTERVAL=24

# Backup retention (days)
BACKUP_RETENTION=30

# Backup storage path
BACKUP_PATH=./backups

# ===================================
# Integration Settings
# ===================================

# GitHub integration enabled
GITHUB_INTEGRATION_ENABLED=false

# GitHub token (for repository integration)
GITHUB_TOKEN=your-github-token-here

# Slack webhook URL (for notifications)
SLACK_WEBHOOK_URL=your-slack-webhook-url-here

# Email notifications enabled
EMAIL_NOTIFICATIONS_ENABLED=false

# SMTP configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# ===================================
# Advanced Configuration
# ===================================

# Enable experimental features
EXPERIMENTAL_FEATURES_ENABLED=false

# Custom model endpoints
CUSTOM_MODEL_ENDPOINTS={}

# Plugin directory
PLUGIN_DIRECTORY=./plugins

# Custom configuration file
CUSTOM_CONFIG_FILE=./config/custom.yaml