# AI Scientist v2 Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== LLM API KEYS =====
# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini API Key (required for Gemini models)
GEMINI_API_KEY=your_gemini_api_key_here

# ===== AWS BEDROCK (for Claude models) =====
# AWS Credentials for Bedrock access
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION_NAME=us-east-1

# ===== RESEARCH TOOLS =====
# Semantic Scholar API Key (optional, for higher throughput)
S2_API_KEY=your_semantic_scholar_api_key_here

# ===== SYSTEM CONFIGURATION =====
# CUDA Configuration
CUDA_VISIBLE_DEVICES=0

# Python Path
PYTHONPATH=/workspaces/AI-Scientist-v2

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum number of parallel workers
MAX_WORKERS=3

# Default model for experimentation
DEFAULT_EXPERIMENT_MODEL=claude-3-5-sonnet

# Default model for writeup
DEFAULT_WRITEUP_MODEL=o1-preview-2024-09-12

# Default model for citation
DEFAULT_CITATION_MODEL=gpt-4o-2024-11-20

# Default model for review
DEFAULT_REVIEW_MODEL=gpt-4o-2024-11-20

# ===== SECURITY SETTINGS =====
# Enable strict input validation
STRICT_VALIDATION=true

# Enable sandbox mode (recommended for production)
SANDBOX_MODE=true

# Maximum execution time for experiments (seconds)
MAX_EXECUTION_TIME=3600

# Maximum memory usage (GB)
MAX_MEMORY_GB=16

# ===== DEVELOPMENT SETTINGS =====
# Enable debug mode
DEBUG_MODE=false

# Enable detailed logging
VERBOSE_LOGGING=false

# Enable experiment caching
ENABLE_CACHING=true

# Cache directory
CACHE_DIR=./cache

# ===== OUTPUT CONFIGURATION =====
# Results output directory
RESULTS_DIR=./experiments

# Temporary files directory
TEMP_DIR=./tmp

# Maximum file size for uploads (MB)
MAX_FILE_SIZE_MB=100

# ===== MONITORING =====
# Enable metrics collection
ENABLE_METRICS=true

# Metrics output file
METRICS_FILE=./metrics.json

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# ===== CITATION AND REFERENCES =====
# Number of citation rounds
NUM_CITE_ROUNDS=20

# Enable literature search
ENABLE_LITERATURE_SEARCH=true

# Maximum papers to analyze per search
MAX_PAPERS_PER_SEARCH=50